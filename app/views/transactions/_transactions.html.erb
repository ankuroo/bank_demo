<%# Partial - Used to display all transactions of the account %>
<div class="column is-three-quarter">
    <% if @transactions.count == 0 %>
    <p class="has-text-centered">You do not have any transactions.</p>
    <% else %>
    <div class="box">
        <div class="content">
            <% @transactions.each do |transaction| %>
            <div class="container">
                <div class="level">
                    <div class="level-left">
                        <%= transaction.created_at.to_date %>
                    </div>
                    <div class="level-item">
                        <strong><%= transaction.payee.name %></strong>
                    </div>
                    <div class="level-item">
                        <%= transaction.reference %>
                    </div>
                    <div class="level-item">
                        Â£<%= transaction.initial_bal %> ðŸ ª Â£<%= transaction.final_bal%>
                    </div>
                    <div class="level-item has-text-danger">
                        Â£<%= transaction.amount %>
                    </div>
                    <div class="level-right">
                        <div class="container">
                            <%= link_to 'Destroy', transaction, class: "button is-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    <% end %>
</div>