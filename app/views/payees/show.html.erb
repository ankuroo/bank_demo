<div class="section">
    <div class="container">
        <div class="level">
            <div class="level-left">
                <h1 class="is-size-1"><%= @payee.name %></h1>
            </div>
            <div class="level-right">
                <%# User can edit payee information %>
                <%= link_to 'Edit', edit_payee_path(@payee), class: "button is-primary is-outlined" %>
            </div>
        </div>
        <div class="columns is-centered">
            <div class="column is-three-quarter">
                <% if @transactions.count == 0%>
                <p>You have not sent any money to this payee. Please go to the the 'Transactions' tab and click
                    'Transfer to send some money.</p>
                <% else %>
                <% @transactions.each do |transaction| %>
                <div class="box">
                    <div class="content">
                        <div class="columns">
                            <div class="column has-text-centered is-one-quarter">
                                <div class="content">
                                    <strong><%= transaction.created_at.to_date %></strong>
                                </div>
                            </div>
                            <div class="column is-half">
                                <div class="content">
                                    <h1 class="is-size-6"><%= transaction.reference %></h1>
                                </div>
                            </div>
                            <div class="column has-text-centered">
                                <div class="content">
                                    <strong>Â£<%=transaction.amount%></strong>
                                </div>
                            </div>
                            <div class="column">
                                <div class="content">
                                    <%= link_to "Delete", transaction, method: :delete, class: "button is-danger"%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>