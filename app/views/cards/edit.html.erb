<%# The page for editing the pin for a bank card. To update database with new information %>
<div class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-4">
                <h1 class="is-size-2"> Editing Card </h1>
                <%# A form to allow user input and store input %>
                <%= simple_form_for(@card) do |f| %>
                <%# Error notifications if input invalid %>
                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


                <div class="form-inputs">
                    <div class="field">
                        <div class="control">
                            <%= f.input :pin, wrapper: false, input_html: { class: "input" }%>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <%# Submit Button %>
                    <%= f.button :submit, class: "button is-primary" %>
                </div>
                <% end %>

                <%= link_to 'Show', @card %> |
                <%= link_to 'Back', cards_path %>

            </div>
        </div>
    </div>
</div>